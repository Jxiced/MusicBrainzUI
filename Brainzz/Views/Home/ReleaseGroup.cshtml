@model ReleaseModel
@{
    ViewData["Title"] = @Model.Title;
}

<div class="text-center">
    <h1>@Model.Title</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Date</th>
                <th scope="col">Country</th>

            </tr>
        </thead>
        <tbody>
            @{
                foreach (var release in Model.Releases)
                {
                    <tr>
                        <td><a href="@Url.Action("Release", new { id = @release.Id })" style="display: block">@release.Title</a></td>
                        <td>@release.Date</td>
                        <td>@release.Country</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
